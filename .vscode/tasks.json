{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "./gradlew",
      "args": ["assembleDebug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gradle"]
    },
    {
      "label": "Install Debug",
      "type": "shell",
      "command": "./gradlew",
      "args": ["installDebug"],
      "group": "build",
      "problemMatcher": ["$gradle"]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "./gradlew",
      "args": ["clean"],
      "group": "build",
      "problemMatcher": ["$gradle"]
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "./gradlew",
      "args": ["test"],
      "group": "test",
      "problemMatcher": ["$gradle"]
    },
    {
      "label": "Run App",
      "type": "shell",
      "command": "./gradlew",
      "args": ["installDebug"],
      "dependsOn": ["Build Debug"],
      "dependsOrder": "sequence",
      "group": "build",
      "problemMatcher": ["$gradle"],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "ADB Devices",
      "type": "shell",
      "command": "adb",
      "args": ["devices"],
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Logcat",
      "type": "shell",
      "command": "adb",
      "args": ["logcat", "-s", "VoiceAssistant:*", "OpenAI:*", "AudioPlayer:*"],
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}